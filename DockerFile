FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install -g pnpm && pnpm install

# Copy all source files
COPY . .

# Expose Vite dev server port
EXPOSE 8080

# Run Vite in development mode
CMD ["pnpm", "run", "dev", "--", "--host"]
